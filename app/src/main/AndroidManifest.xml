<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wvt.horizonmgr">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:name=".HorizonManagerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HorizonManagerCompose.NoActionBar">
        <activity android:name=".ui.news.NewsContentActivity"></activity>
        <activity android:name=".ui.onlinemoddetail.OnlineModDetailActivity" />
        <activity android:name=".ui.modulemanager.ModConfigActivity" />
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.HorizonManagerCompose.SlashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.settings.CustomThemeActivity" />
        <activity android:name=".ui.joingroup.JoinGroupActivity" />
        <activity android:name=".ui.community.CommunityActivity" />
        <activity android:name=".ui.pacakgemanager.InstallPackageActivity" />
        <activity android:name=".ui.fileselector.SelectFileActivity" />
        <activity android:name=".ui.pacakgemanager.PackageDetailActivity" />
        <activity android:name=".ui.settings.SettingsActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.donate.DonateActivity"
            android:theme="@style/Theme.HorizonManagerCompose.Donate" />
    </application>

</manifest>